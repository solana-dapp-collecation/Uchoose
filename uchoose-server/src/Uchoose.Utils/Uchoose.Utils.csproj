    <Folder Include="Filters\" />
    <Folder Include="Mappings\" />
    <Folder Include="Wrapper\" />
    <Folder Include="Specifications\" />
    <Folder Include="Performance\" />
  </ItemGroup>

  <Target Name="CopyFiles" BeforeTargets="Build">
